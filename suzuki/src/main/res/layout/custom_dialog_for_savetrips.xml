<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/rounded_gradient_view"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivCustomClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@color/transaparent"
        android:src="@drawable/close" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transaparent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivWarning"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:background="@color/transaparent"
            android:src="@drawable/warning"
            android:visibility="visible" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@color/transaparent"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="Are you sure you want to
delete the trips ?"
            android:textColor="#eeeeee"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/etTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@color/transaparent"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:padding="6dp"
            android:text="Are you sure you want to delete the trips ?"
            android:textColor="#eeeeee"
            android:textSize="14sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/llSave"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_white_btn"
            android:gravity="center"
            android:visibility="visible">


            <TextView

                android:id="@+id/tvCustomTextBtn"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/blue"
                android:textSize="15sp" />

        </LinearLayout>
        <!--android:background="@drawable/rounded_white_btn"-->

    </LinearLayout>
</RelativeLayout>